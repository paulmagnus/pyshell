"""
Test of new Procedure class
"""

from pyshell.procedure import Procedure

# target program:
# ls

Procedure("ls").write()

print("----------------------------")

# target program:
# ls | grep 2.py
Procedure("ls").pipe(Procedure("grep", "2.py")).write()

print("----------------------------")

# testing out | usage
(Procedure("ls") | Procedure("grep", "2.py")).write()

print("----------------------------")

# target program:
# ls | less
# (Procedure("ls") | Procedure("less")).begin_process()

# less does not work the same way that these previous things work

# print("----------------------------")

(Procedure("ls", "-al") | Procedure("cat")).write()

Procedure("cat", "target02.py").write()

def $test_echo:
    $echo 'hello'$
    $echo 'error'$

def test_echo(argv, stdin):
    proc = $$
    proc += $echo 'hello'$
    proc += $echo 'error'$
    return proc

def $try_cat:
    $cat < instream$

def try_cat(argv, stdin):
    proc = $$
    proc += $cat < stdin$
    return proc

def $loop_test:
    for arg in argv:
        $echo arg$

def loop_test(argv, stdin):
    proc = $$
    for arg in argv:
        proc += $echo arg$
    return proc

def $remove_temp:
    if $test '-d', 'tmpdir'$:
        $rm '-r', 'tmpdir'$

def remove_temp(argv, stdin):
    proc = $$
    if $test '-d', 'tmpdir'$:
        $rm '-r', 'tmpdir'$
    return proc

if verbose:
    print("\nCopying required files\n")


files $< projectDir + '/required_files'$
for f in files:
    filepath = folder + '/' + f
    if f == '*':
        $cp '-R', folder + '/.', tmpdir$
        break

    if $test '-f', filepath$:
        $cp filepath, tmpdir + '/' + f$